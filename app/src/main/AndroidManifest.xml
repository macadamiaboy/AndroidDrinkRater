<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DrinkRater"
        tools:targetApi="31">
        <activity
            android:name=".ReviewCreationActivity"
            android:exported="false"
            android:label="@string/title_activity_review_creation"
            android:theme="@style/Theme.DrinkRater" />
        <activity
            android:name=".SingleReviewActivity"
            android:exported="false"
            android:label="@string/title_activity_single_review"
            android:theme="@style/Theme.DrinkRater" />
        <activity
            android:name=".ReviewListActivity"
            android:exported="false"
            android:label="@string/title_activity_review_list"
            android:theme="@style/Theme.DrinkRater" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.DrinkRater" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DrinkRater">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>